<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff5cd6ff"
    tools:context="com.kuczon.weightcalc.WeightGain"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight Gain"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Weight"
        android:id="@+id/textCurrent"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="64dp"
        android:paddingRight="64dp"
        android:id="@+id/editText"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_marginStart="31dp"
        android:layout_alignBottom="@+id/textCurrent"
        android:layout_toEndOf="@+id/textCurrent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calorie intake:"
        android:id="@+id/textIntake"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_below="@+id/textCurrent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calorieAmountIn"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textIntake"
        android:layout_alignEnd="@+id/textView2"
        android:text="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Protein intake:"
        android:id="@+id/textProteinIn"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textProteinIn"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carb intake:"
        android:id="@+id/textcarbs"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/textProteinIn"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textCarbIn"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textcarbs"
        android:layout_alignStart="@+id/textProteinIn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/buttonSave"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
